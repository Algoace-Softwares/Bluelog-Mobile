{
  "expo": {
    "name": "Odiisea",
    "slug": "Odiisea",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "odiisea",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/splash-icon.png",
          "dark": {
            "image": "./src/assets/images/splash-icon.png",
            "backgroundColor": "#0B0928"
          },
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#E44100"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./src/assets/fonts/OpenSans-Regular.ttf",
            "./src/assets/fonts/OpenSans-Medium.ttf",
            "./src/assets/fonts/OpenSans-Bold.ttf",
            "./src/assets/fonts/OpenSans-ExtraBold.ttf",
            "./src/assets/fonts/OpenSans-Light.ttf",
            "./src/assets/fonts/OpenSans-SemiBold.ttf",
            "./src/assets/fonts/OpenSans-Italic.ttf",
            "./src/assets/fonts/Zain-Regular.ttf",
            "./src/assets/fonts/Zain-Bold.ttf",
            "./src/assets/fonts/Zain-Black.ttf",
            "./src/assets/fonts/Zain-ExtraBold.ttf",
            "./src/assets/fonts/Zain-Light.ttf",
            "./src/assets/fonts/Zain-ExtraLight.ttf",
            "./src/assets/fonts/Zain-Italic.ttf",
            "./src/assets/fonts/Zain-LightItalic.ttf"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
